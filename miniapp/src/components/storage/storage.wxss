} */
.storage-main {
    margin-top: 30rpx;
}
.storage-footer {
    position: absolute;
    bottom: 30rpx;
    left:32rpx;
}
.add-storagekey-input{
    width: 20%;
    margin-right:2rem;
}
.add-storagevalue-input{
    width: 65%
}
.add-popup-header{
    font-size: 28rpx;
    height: 100rpx;
    line-height: 100rpx;
}
.add-popup-header .main-title{
    padding: 0 250rpx;
    text-align: center;
    font-size: 36rpx;
}
.add-popup-header .cancel{
    color: #999999;
}
.add-popup-header .add{
    color: #337CC4;
}
.add-dialog .name{
    font-size: 24rpx;
    color: #666666;
    width: 100%;
    margin-top: 40rpx;
    margin-bottom: 24rpx;
}
.add-dialog-input {
    width: 100%;
    border: 0;
    border-bottom: 1rpx solid #EEEEEE;
    padding-bottom: 16rpx;
}